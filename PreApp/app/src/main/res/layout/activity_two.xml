<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ActivityTwo">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textFontWeight="500"
        android:layout_marginHorizontal="24dp"
        style="@style/about"
        android:text="Input"/>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Masukkan Teks"
        app:hintTextColor="#AEAEAC"
        app:boxBackgroundMode="none"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="-18dp">
        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputIntent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="24sp"
            android:textStyle="bold"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:textFontWeight="500"
        android:layout_marginHorizontal="24dp"
        style="@style/about"
        android:text="Output"/>

    <TextView
        android:id="@+id/outputIntent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="24dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="24dp"
        android:textFontWeight="600"
        style="@style/HeadingTwo"
        android:textColor="#AEAEAC"
        android:text="Keluaran Teks"/>

    <Button
        android:id="@+id/intent"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="24dp"
        android:layout_height="56dp"
        style="@style/primaryBtn"
        android:text="@string/button"/>

</LinearLayout>