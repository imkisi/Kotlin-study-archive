<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PreApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <item name="android:windowBackground">#EAEAE8</item>
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.PreApp" parent="Base.Theme.PreApp" />

    <style name="headingOne">
        <item name="android:textSize">36sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="HeadingTwo">
        <item name="android:textSize">24sp</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="about">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="TextAppearance.App.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="subTitle">
        <item name="android:textSize">20sp</item>
        <item name="fontFamily">sans-serif</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CircleButton" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="Widget.App.Button.Circle" parent="Widget.Material3.Button">
        <item name="backgroundTint">#D9D9D8</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">30dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconTint">#000000</item>
        <item name="android:contentDescription">social media</item>
    </style>

    <style name="Widget.App.Button.Next" parent="Widget.Material3.Button">
        <item name="backgroundTint">#000000</item>
        <item name="iconPadding">0dp</item>
        <item name="iconSize">30dp</item>
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconTint">#FFFFFF</item>
        <item name="android:contentDescription">next</item>
    </style>

    <style name="Widget.App.CardView" parent="CardView">
        <item name="cardBackgroundColor">#FEFEFE</item>
        <item name="cardElevation">0dp</item>
        <item name="cardCornerRadius">28dp</item>
    </style>

    <style name="primaryBtn">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:backgroundTint">#000000</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20%</item>
    </style>

</resources>